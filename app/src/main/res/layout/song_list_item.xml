<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/album_art_iv"
        android:layout_width="@dimen/song_iv_size"
        android:layout_height="@dimen/song_iv_size"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/album_art_iv"
        android:layout_toStartOf="@id/runtime_tv"
        android:layout_above="@id/artist_tv"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/album_art_iv"
        android:layout_alignBottom="@id/album_art_iv"
        android:layout_marginBottom="@dimen/small_margin" />

    <TextView
        android:id="@+id/runtime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/artist_tv"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/large_padding"
        android:paddingStart="@dimen/large_padding" />
</RelativeLayout>