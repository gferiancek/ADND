<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/red_200"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="2dp">

        <TextView
            android:id="@+id/away_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Away"
            style="@style/scoreboardHeader"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/home_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/away_textview"
            android:text="Home"
            style="@style/scoreboardHeader" />

        <include layout="@layout/inning"
            android:id="@+id/away_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/away_textview"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/away_textview"
            android:layout_marginEnd="16dp" />

        <include layout="@layout/inning"
            android:id="@+id/home_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/away_include"
            android:layout_alignEnd="@id/away_include"
            android:layout_alignTop="@id/home_textview" />

        <include layout="@layout/inning_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/away_include"
            android:layout_alignEnd="@id/away_include"
            android:layout_above="@id/away_textview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="Current Inning" />
    </RelativeLayout>

</LinearLayout>