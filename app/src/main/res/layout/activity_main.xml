<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="1dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="4dp">

        <TextView
            android:id="@+id/away_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Away"
            android:textSize="18sp"
            style="@style/scoreboardHeader"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/home_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/away_textview"
            android:textSize="18sp"
            android:text="Home"
            style="@style/scoreboardHeader"
            android:layout_marginStart="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inning_top_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/away_textview"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/away_textview"
            android:layout_alignBottom="@id/away_textview"
            android:layout_marginStart="8dp"
            android:overScrollMode="never" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inning_bottom_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/inning_top_recyclerview"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/home_textview"
            android:layout_alignBottom="@id/home_textview"
            android:overScrollMode="never" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/header_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/inning_top_recyclerview"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/away_textview"
            android:overScrollMode="never" />

        <ImageView
            android:id="@+id/logo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/away_textview"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/header_recyclerview"
            android:src="@drawable/mlb"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.25dp"
            android:layout_below="@id/header_recyclerview"
            android:background="@color/indigo_700"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Current Inning"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:padding="8dp">

                <TextView
                    android:id="@+id/away_team_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Away"
                    android:textAllCaps="true"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Hit"
                        android:gravity="center"
                        android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/away_hit_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/away_run_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="60sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="Error"
                            android:gravity="center"
                            android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/away_error_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="20sp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Strike"
                            android:gravity="center_horizontal"
                            android:textAllCaps="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/away_strike_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"/>

                        <ImageView
                            android:id="@+id/away_strike_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:paddingStart="0dp"
                            android:paddingEnd="8dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Out"
                            android:textAllCaps="true"
                            android:gravity="center_horizontal"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/away_out_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"/>

                        <ImageView
                            android:id="@+id/away_out_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_weight="1"
                            android:paddingStart="0dp"
                            android:paddingEnd="8dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Ball"
                            android:textAllCaps="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/away_ball_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/away_ball_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/away_ball_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Run"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:tag="away_run"
                    android:onClick="updateStatistic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Hit"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:tag="away_hit"
                    android:onClick="updateStatistic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Error"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:tag="away_error"
                    android:onClick="updateStatistic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="add Strike"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:tag="away_strike"
                    android:onClick="updateStatistic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Out"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:tag="away_out"
                    android:onClick="updateStatistic"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Ball"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:tag="away_ball"
                    android:onClick="updateStatistic"/>

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/indigo_200" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textAllCaps="true"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="Hit"
                                android:gravity="center"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/home_hit_textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/home_run_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="60sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="Error"
                                android:gravity="center"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/home_error_textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Strike"
                                android:gravity="center_horizontal"
                                android:textAllCaps="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/home_strike_1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_clear_24"
                                    android:layout_weight="1"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="0dp"/>

                                <ImageView
                                    android:id="@+id/home_strike_2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_baseline_clear_24"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="8dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Out"
                                android:textAllCaps="true"
                                android:gravity="center_horizontal"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/home_out_1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_clear_24"
                                    android:layout_weight="1"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="0dp"/>

                                <ImageView
                                    android:id="@+id/home_out_2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_clear_24"
                                    android:layout_weight="1"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="8dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Ball"
                                android:textAllCaps="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/home_ball_1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_clear_24"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:id="@+id/home_ball_2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_clear_24"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:id="@+id/home_ball_3"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_clear_24"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Run"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:tag="home_run"
                        android:onClick="updateStatistic"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Hit"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:tag="home_hit"
                        android:onClick="updateStatistic"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Error"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:tag="home_error"
                        android:onClick="updateStatistic"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="add Strike"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:tag="home_strike"
                        android:onClick="updateStatistic"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Out"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:tag="home_out"
                        android:onClick="updateStatistic"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Ball"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:tag="home_ball"
                        android:onClick="updateStatistic"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/restart_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:onClick="restartGame"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dev_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:onClick="jumpToNinthInning"/>
    </LinearLayout>

</LinearLayout>