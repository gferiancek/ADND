<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NowPlayingFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/song_art_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/medium_margin">

        <TextView
            android:id="@+id/song_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_song"
            android:textSize="@dimen/large_text_size"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/song_artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_artist"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/song_album_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_album"
            android:maxLines="1"
            android:ellipsize="end" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/current_playtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_runtime"
                android:textSize="@dimen/small_text_size"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin"
                android:layout_marginBottom="@dimen/small_margin" />

            <TextView
                android:text="3:21"
                android:id="@+id/total_playtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin" />

            <ProgressBar
                android:id="@+id/playtime_pb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/current_playtime_tv"
                android:layout_alignEnd="@id/total_playtime_tv"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_below="@id/current_playtime_tv"
                android:layout_marginBottom="@dimen/small_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/playtime_pb"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_previous_24"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_fast_rewind_24"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_fast_forward_24"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_next_24"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>